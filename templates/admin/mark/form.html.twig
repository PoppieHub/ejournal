{% extends 'admin/adminbase.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row no-gutters">
            <div class="col-12">
                <h1 class="display-4 text-center mt-5">
                    {{ title }}
                </h1>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row no-gutters justify-content-center align-items-center mt-5">
            <div class="col-6">

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="d-grid gap-2 mx-auto">
                    <button class="btn btn-primary mt-5" type="submit">
                        Создать
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}