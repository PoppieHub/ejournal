<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Админ-панель{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
                  rel="stylesheet"
                  integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
                  crossorigin="anonymous">
            <link href="public\assets\main\css\style.css"
                  rel="stylesheet">
            <script src="https://kit.fontawesome.com/c985b93468.js"
                    crossorigin="anonymous">
            </script>
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('home') }}">
                <i class="fas fa-journal-whills"></i>
            </a>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('admin_home') }}">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" target="_blank" href="{{ path('home') }}">Выход на сайт</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('admin_user') }}">Пользователи</a>
                    </li>

                </ul>
            </div>
            <form class="form-inline" >
                <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Выход</a>
            </form>
        </div>
    </nav>
        {% block body %}{% endblock %}

        {% block javascripts %}
            <!-- Optional JavaScript -->
            <!-- jQuery first, then Popper.js, then Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js"
                     integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi"
                     crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js"
                    integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG"
                    crossorigin="anonymous"></script>

            {% block addJs %}{% endblock %}
        {% endblock %}
    </body>
</html>
