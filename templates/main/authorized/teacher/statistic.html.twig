{% extends 'main/authorized/baseProfile.html.twig' %}

{% block title %}Статистика{% endblock %}

{% block contentTitle %}
    <h1>{{ title }}{{ discipline.name_discipline }}</h1>
{% endblock %}
{% block content %}
    <div class="row g-0 feature">
        <div class="col-md-1" style="margin-top: 15px">
            {% if user.image is null %}
                <img style="width: 100%;" class="img-fluid" src="/public/assets/main/images/avatar-default.svg">
            {% else %}
                <img style="width: 100%;" class="img-fluid" src="/public/assets/main/images/user/{{ user.image }}">
            {% endif %}
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><b>ФИО: </b>{{ user.LastName }} {{ user.FirstName }} {{ user.MiddleName }}</li>
                    <li class="list-group-item"><b>Email</b>: {{ user.Email }} </li>
                </ul>
            </div>
    </div>
{% endblock %}

