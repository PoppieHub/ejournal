{% extends 'main/authorized/profile.html.twig' %}

{% block title %}{{ group.groupName }}{% endblock %}

{% block contentTitle %}
    <h1>{{ title }}{{ group.groupName }}</h1>
{% endblock %}
{% block content %}

    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12 mt-4">
                <h3>Дисциплина - {{ discipline.name_discipline }}</h3>
                {% set count = 1 %}
                <table class="table table-hover text-center">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Студент</th>
                        <th scope="col">Общее колличество пар</th>
                        <th scope="col">Пропущено</th>
                        <th scope="col">Процент посещаемости</th>
                        <th scope="col">Действие</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for student in students %}
                            <tr>
                                <th scope="row">{{ count }}</th>
                                <td>{{ student.last_name }} {{ student.first_name[:1] }}. {{ student.middle_name[:1] }}.</td>
                                <td><b>{{ student.count }}</b></td>
                                <td>
                                    {% if student.countMiss == 0 %}
                                        <b class="text-success">{{ student.countMiss }}</b>
                                    {% else %}
                                        <b class="text-danger">{{ student.countMiss }}</b>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if student.count == student.countMiss %}
                                        {% set countP = '0' %}
                                        <b class="text-danger">{{ countP }}%</b>
                                    {% elseif student.countMiss == 0 %}
                                        {% set countP = '100' %}
                                        <b class="text-success">{{ countP }}%</b>
                                    {% else %}
                                        {% set countP = (100 - student.countMiss/student.count * 100)|round(1, 'floor') %}
                                        {% if countP > 59 %}
                                            <b class="text-success">{{ countP }}%</b>
                                        {% else %}
                                            <b class="text-danger">{{ countP }}%</b>
                                        {% endif %}
                                    {% endif %}
                                    {% set count = count + 1 %}
                                </td>
                                <td>
                                    <a href="{{ path('add_visit', { disciplineId :disciplineId, groupId :group.id, studentId :student.studentId, plus :'+'}) }}" type="button" class="btn btn-outline-success"><i class="fas fa-plus"></i></a>
                                    <a href="{{ path('add_visit', { disciplineId :disciplineId, groupId :group.id, studentId :student.studentId, plus :'-'}) }}" type="button" class="btn btn-outline-danger"><i class="fas fa-minus"></i></a>
                                    {% if student.count >= 1 %}
                                         <a href="{{ path('teacher_statistic', {disciplineId :disciplineId, studentId :student.studentId}) }}" type="button" class="btn btn-outline-dark"><i class="fas fa-eye"></i></a>
                                    {% endif %}
                                </td>
                            </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

